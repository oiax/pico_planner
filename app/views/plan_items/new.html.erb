<%= form_for @plan_item do |f| %>
  <div class='form-group'>
    <%= f.label :name, '件名' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :description, '説明' %>
    <%= f.text_area :description, class: 'form-control', rows: 4 %>
  </div>
  <div class='form-group'>
    <%= f.submit '追加', class: 'btn btn-success' %>
  </div>
<% end %>
