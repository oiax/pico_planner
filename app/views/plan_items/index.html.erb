<div class='container-fluid plan-items'>
<% @plan_items.each do |item| %>
  <div class='row'>
    <div class='col-xs-12 col-md-4'>
      <span class='plan-item-name'><%= item.name %></span>
    </div>
    <div class='col-xs-12 col-md-8'>
      <span class='plan-item-description'><%= item.description %></span>
    </div>
    <div class='col-xs-12'>
      <span class='plan-item-duration'><%= format_duration(item) %></span>
    </div>
  </div>
<% end %>
</div>
